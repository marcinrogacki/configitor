#!/bin/bash
if [ ! -f lsyncd.conf ]; then
    >&2 echo "Cannot start. A config file lsyncd.conf ns ben not found."
    exit 1
fi

lsyncd -nodaemon lsyncd.conf 1>/dev/null &
PID=$!
function wait_notification()
{
    wait $PID 2>/dev/null
    DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    notify-send 'lsyncd stopped' "Stopped synchronization of $DIR" --icon=dialog-error
}

wait_notification
