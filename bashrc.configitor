#!/bin/sh

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $script_dir/order.sh

for soft in $software_order
do
  script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
  soft_dir=$script_dir/$soft
  if [ -f "$soft_dir/bashrc" ]; then
    . "$soft_dir/bashrc"
  fi
done
